<div class="container">
  <h1>Events, MoFo!</h1>
  <p>These are your events.  There are many like them, but these ones are yours.</p>
  <% if session[:user_id] %>
    <a href='/new_event'><button>Create New Event!</button></a>
  <% end %>

  <table>
    <tr>
      <th>Event Name</th>
      <th>Location</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>Created by</th>
    </tr>
    <% Event.all.each do |event| %>
      <tr>
        <td><a href='/event/<%= event.id %>'><%= event.name %></a></td>
        <td><a href='https://www.google.com/maps/preview#!q=<%= event.location %>' target='_blank'><%= event.location %></a></td>
        <td><%= event.starts_at %></td>
        <td><%= event.ends_at %></td>
        <td><a href='/user/<%= event.user_id %>'><%= User.find(event.user_id).first_name %> <%= User.find(event.user_id).last_name %></a></td>
        <% if event.user_id == session[:user_id] %><td><a href='edit/<%= event.id %>'>Edit this event</a></td><% end %>
      </tr>
    <% end %>
  </table>

  <% if session[:user_id] %>
    <a href='/new_event'><button>Create New Event!</button></a>
  <% end %>
</div>
