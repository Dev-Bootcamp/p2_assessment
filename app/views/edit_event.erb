<div class="container">
  <h1>Edit Your Event</h1>

  <form id="edit-event" method="post" action="/edit_event">

    <input type="hidden" name="event[id]" value="<%= @event.id %>">

    <label class="label">Event Name
    <input type="text" name="event[name]" value="<%=@event.name %>"></label>
    <br>

    <label class="label">Location
    <input type="text" name="event[location]" value="<%= @event.location %>"></label>
    <br>

    <label class="label">Starting Date & Time
    <input type="datetime" name="event[starts_at]" value="<%= @event.starts_at %>"></label>
    <br>

    <label class="label">Ending Date & Time
    <input type="datetime" name="event[ends_at]" value="<%= @event.ends_at %>"></label>
    <br>

    <div class="submit"><input type="submit" value="Submit Your Changes"></div>
  </form>

  <a href="/delete/<%= @event.id %>"><button>Delete this Event</button></a>

</div>